{
  "compilerOptions": {
    "lib": ["ES5", "ES6", "DOM", "DOM.Iterable"],
    "target": "ES2017",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "strict": true,
    "outDir": "./lib",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "demo/**/*.ts"],
  "typedocOptions": {
    "out": "./api-docs",
    "exclude": "**/**.js",
    "darkHighlightTheme": "dark-plus",
    "readme": "none",
    "sort": "visibility"
  }
}
