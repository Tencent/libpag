    "magic-string": "^0.25.7",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.5",
    "rollup-plugin-esbuild": "^4.7.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.5.0",
    "tslib": "^2.1.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2"
  },
  "files": [
    "lib",
    "types",
    "README.md",
    "README.zh_CN.md",
    "CHANGELOG.md",
    "CHANGELOG.zh_CN.md",
    "LICENSE.txt"
