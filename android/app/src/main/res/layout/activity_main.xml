<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="libpag.pagviewer.MainActivity">

    <RelativeLayout
        android:id="@+id/container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:clickable="true"
        android:focusable="true">

        <Button
            android:id="@+id/play_first"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bt_drawable"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="PAGView"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/play_second"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bt_drawable"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="PAGImageView"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_compose"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bt_drawable"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Compose"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>
