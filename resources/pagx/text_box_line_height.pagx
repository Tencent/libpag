<?xml version="1.0" encoding="UTF-8"?>
<pagx width="570" height="470" version="1.0">
  <!-- Box A: Auto lineHeight, mixed font sizes (40+20+60), Near -->
  <Layer x="50" y="50">
    <Group>
      <Rectangle center="100,90" size="200,180"/>
      <Stroke color="#000" width="1"/>
    </Group>
    <Group>
      <Group>
        <Text text="Hg&#10;" fontFamily="NotoSansSC" fontSize="40"/>
        <Fill color="#000"/>
      </Group>
      <Group>
        <Text text="Xy" fontFamily="NotoSansSC" fontSize="20"/>
        <Fill color="#000"/>
      </Group>
      <Group>
        <Text text="&#10;AB" fontFamily="NotoSansSC" fontSize="60"/>
        <Fill color="#000"/>
      </Group>
      <TextBox size="200,180"/>
    </Group>
  </Layer>

  <!-- Box B: Fixed lineHeight=40, same mixed text, Near -->
  <Layer x="260" y="50">
    <Group>
      <Rectangle center="100,90" size="200,180"/>
      <Stroke color="#000" width="1"/>
    </Group>
    <Group>
      <Group>
        <Text text="Hg&#10;" fontFamily="NotoSansSC" fontSize="40"/>
        <Fill color="#000"/>
      </Group>
      <Group>
        <Text text="Xy" fontFamily="NotoSansSC" fontSize="20"/>
        <Fill color="#000"/>
      </Group>
      <Group>
        <Text text="&#10;AB" fontFamily="NotoSansSC" fontSize="60"/>
        <Fill color="#000"/>
      </Group>
      <TextBox size="200,180" lineHeight="40"/>
    </Group>
  </Layer>

  <!-- Box C: Fixed lineHeight=50 + Far (bottom alignment) -->
  <Layer x="50" y="240">
    <Group>
      <Rectangle center="75,80" size="150,160"/>
      <Stroke color="#000" width="1"/>
    </Group>
    <Group>
      <Text text="Line1&#10;Line2" fontFamily="NotoSansSC" fontSize="24"/>
      <Fill color="#000"/>
      <TextBox size="150,160" paragraphAlign="far" lineHeight="50"/>
    </Group>
  </Layer>

  <!-- Box D: Fixed lineHeight=50 + Center -->
  <Layer x="210" y="240">
    <Group>
      <Rectangle center="75,80" size="150,160"/>
      <Stroke color="#000" width="1"/>
    </Group>
    <Group>
      <Text text="Line1&#10;Line2" fontFamily="NotoSansSC" fontSize="24"/>
      <Fill color="#000"/>
      <TextBox size="150,160" paragraphAlign="middle" lineHeight="50"/>
    </Group>
  </Layer>

  <!-- Box E: 3-line mixed sizes + Far (multi-step bottom-up recursion) -->
  <Layer x="370" y="240">
    <Group>
      <Rectangle center="75,90" size="150,180"/>
      <Stroke color="#000" width="1"/>
    </Group>
    <Group>
      <Group>
        <Text text="Large&#10;" fontFamily="NotoSansSC" fontSize="36"/>
        <Fill color="#000"/>
      </Group>
      <Group>
        <Text text="Medium&#10;" fontFamily="NotoSansSC" fontSize="24"/>
        <Fill color="#000"/>
      </Group>
      <Group>
        <Text text="Tiny" fontFamily="NotoSansSC" fontSize="16"/>
        <Fill color="#000"/>
      </Group>
      <TextBox size="150,180" paragraphAlign="far"/>
    </Group>
  </Layer>
</pagx>
