      <Rectangle center="285,310" size="150,80"/>
      <Stroke color="#000" width="1"/>
    </Group>
    <Group>
      <Text text="aaAÂẤ" fontFamily="NotoSansSC" fontSize="32"/>
      <TextBox position="210,270" size="150,80" paragraphAlign="middle"/>
